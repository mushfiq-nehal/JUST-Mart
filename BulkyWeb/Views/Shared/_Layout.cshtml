@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JUST Mart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/BulkyBookWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background: rgba(255, 255, 255, 0.98); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); box-shadow: 0 2px 20px rgba(102, 126, 234, 0.1); border-bottom: 1px solid rgba(102, 126, 234, 0.1);">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index" style="transition: transform 0.3s ease;">
                    <img src="~/logo/justmart-logo.png" alt="JUST Mart Logo" style="height: 55px; width: auto; object-fit: contain;" class="me-2" />
                </a>
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-1 fw-semibold position-relative nav-link-modern" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-1 fw-semibold position-relative nav-link-modern" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-box-seam me-1"></i>Orders
                            </a>
                        </li>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3 py-2 mx-1 fw-semibold position-relative nav-link-modern" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i>Manage
                                </a>
                                <ul class="dropdown-menu shadow-lg border-0 mt-2" style="border-radius: 12px; overflow: hidden; animation: dropdownSlide 0.3s ease;">
                                    <li class="nav-item">
                                        <a class="dropdown-item py-2 px-4 dropdown-item-modern" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                            <i class="bi bi-tags me-2" style="color: #667eea;"></i>Categories
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item py-2 px-4 dropdown-item-modern" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                            <i class="bi bi-box me-2" style="color: #667eea;"></i>Products
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item py-2 px-4 dropdown-item-modern" asp-area="Admin" asp-controller="Company" asp-action="Index">
                                            <i class="bi bi-building me-2" style="color: #667eea;"></i>Companies
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item py-2 px-4 dropdown-item-modern" asp-area="Identity" asp-page="/Account/Register">
                                            <i class="bi bi-person-plus me-2" style="color: #667eea;"></i>Create User
                                        </a>
                                    </li>
                                     <li class="nav-item">
                                        <a class="dropdown-item py-2 px-4 dropdown-item-modern" asp-area="Admin" asp-controller="User" asp-action="Index">
                                            <i class="bi bi-people me-2" style="color: #667eea;"></i>Manage Users
                                        </a>
                                    </li>

                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-3">
                            <a class="nav-link px-3 py-2 position-relative cart-link" asp-area="Customer" asp-controller="Cart" asp-action="Index" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 25px; font-weight: 600; transition: all 0.3s ease;">
                                <i class="bi bi-cart3 me-1" style="font-size: 1.1rem;"></i>Cart
                                @await Component.InvokeAsync("ShoppingCart")
                            </a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="padding-top: 80px;"></div>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <h5 class="text-white">JUST Mart</h5>
                    <p class="text-muted mb-0">Your one-stop shop for amazing products</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">Made with <i class="bi bi-heart-fill text-danger"></i> by <strong class="text-white">Nehal</strong></p>
                    <small class="text-muted">&copy; 2025 JUST Mart. All rights reserved.</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js" asp-append-version="true"></script>

    <script src="https://cdn.tiny.cloud/1/g28lhnxtlihu4l4a381gw7tz47voznshwbi10lmsvlekrfme/tinymce/6/tinymce.min.js" referrerpolicy="origin">
         <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
