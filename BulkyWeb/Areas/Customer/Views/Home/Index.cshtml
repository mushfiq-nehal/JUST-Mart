    <div class="hero-bg-animation"></div>
    <div class="container py-5">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6" data-aos="fade-right">
                <div class="hero-badge mb-3">
                    <span class="badge-icon">🎉</span>
                    <span class="badge-text">Special Offer for JUSTIANS</span>
                </div>
                <h1 class="hero-title mb-4">
                    Get <span class="highlight-text">20% OFF</span><br/>
                    On Your First Order
                </h1>
                <p class="hero-subtitle mb-4">
                    Discover premium products at unbeatable prices.<br/>
                    Use code <span class="promo-code">JUSTIAN</span> at checkout
                </p>
                <div class="hero-buttons">
                    <a href="#products" class="btn btn-primary btn-lg me-3">
                        <span>Start Shopping</span>
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <a href="#" class="btn btn-outline-dark btn-lg">
                        <span>Learn More</span>
                    </a>
                </div>
                <div class="hero-stats mt-5">
                    <div class="stat-item">
                        <h3>10K+</h3>
                        <p>Happy Customers</p>
                    </div>
                    <div class="stat-item">
                        <h3>500+</h3>
                        <p>Premium Products</p>
                    </div>
                    <div class="stat-item">
                        <h3>4.9★</h3>
                        <p>Average Rating</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="hero-image-container">
                    <div class="floating-card card-1">
                        <i class="bi bi-lightning-charge-fill"></i>
                        <span>Fast Delivery</span>
                    </div>
                    <div class="floating-card card-2">
                        <i class="bi bi-shield-check"></i>
                        <span>Secure Payment</span>
                    </div>
                    <div class="floating-card card-3">
                        <i class="bi bi-headset"></i>
                        <span>24/7 Support</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-wave">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 0L60 10C120 20 240 40 360 46.7C480 53 600 47 720 43.3C840 40 960 40 1080 46.7C1200 53 1320 67 1380 73.3L1440 80V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="white"/>
        </svg>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5" id="products">
    <div class="container">
        <div class="section-header text-center mb-5" data-aos="fade-up">
            <h2 class="section-title">Browse by Category</h2>
            <p class="section-subtitle">Find exactly what you're looking for</p>
        </div>
        <div class="categories-grid">
            <div class="category-card" data-aos="zoom-in" data-aos-delay="100">
                <div class="category-icon">
                    <i class="bi bi-book"></i>
                </div>
                <h4>Books</h4>
                <p>150+ items</p>
            </div>
            <div class="category-card" data-aos="zoom-in" data-aos-delay="200">
                <div class="category-icon">
                    <i class="bi bi-laptop"></i>
                </div>
                <h4>Electronics</h4>
                <p>230+ items</p>
            </div>
            <div class="category-card" data-aos="zoom-in" data-aos-delay="300">
                <div class="category-icon">
                    <i class="bi bi-headphones"></i>
                </div>
                <h4>Audio</h4>
                <p>120+ items</p>
            </div>
            <div class="category-card" data-aos="zoom-in" data-aos-delay="400">
                <div class="category-icon">
                    <i class="bi bi-gift"></i>
                </div>
                <h4>Gifts</h4>
                <p>80+ items</p>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-5" data-aos="fade-up">
            <div>
                <h2 class="section-title mb-2">Featured Products</h2>
                <p class="section-subtitle mb-0">Handpicked items just for you</p>
            </div>
            <div class="filter-controls">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="new">New</button>
                <button class="filter-btn" data-filter="sale">On Sale</button>
                <button class="filter-btn" data-filter="popular">Popular</button>
            </div>
        </div>

        <div class="products-grid">
            @foreach (var product in Model)
            {
                <div class="modern-product-card" data-aos="fade-up" data-aos-delay="@((Model.ToList().IndexOf(product) % 4) * 100)">
                    <div class="product-image-wrapper">
                        @if(product.ProductImages!=null && product.ProductImages.Count() > 0) {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" alt="@product.Title" class="product-main-image" />
                        }
                        else {
                            <img src="https://placehold.co/400x500/f8f9fa/667eea/png?text=@product.Title" alt="@product.Title" class="product-main-image" />
                        }
                        
                        @if(product.ListPrice > product.Price100)
                        {
                            var discount = Math.Round(((product.ListPrice - product.Price100) / product.ListPrice) * 100);
                            <div class="product-badge sale-badge">
                                <span>-@discount%</span>
                            </div>
                        }
                        
                        <div class="product-quick-actions">
                            <button class="quick-action-btn wishlist-btn" title="Add to Wishlist">
                                <i class="bi bi-heart"></i>
                            </button>
                            <button class="quick-action-btn view-btn" title="Quick View">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="quick-action-btn compare-btn" title="Compare">
                                <i class="bi bi-arrow-left-right"></i>
                            </button>
                        </div>
                        
                        <div class="product-overlay">
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-view-details">
                                <span>View Details</span>
                                <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                    
                    <div class="product-info">
                        <div class="product-category">
                            <i class="bi bi-tag-fill me-1"></i>
                            <span>@product.Category.Name</span>
                        </div>
                        <h3 class="product-title">
                            <a asp-action="Details" asp-route-productId="@product.Id">@product.Title</a>
                        </h3>
                        <div class="product-rating">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <span class="rating-count">(4.5)</span>
                        </div>
                        <div class="product-footer">
                            <div class="product-price">
                                <span class="current-price">@product.Price100.ToString("c")</span>
                                @if(product.ListPrice > product.Price100)
                                {
                                    <span class="old-price">@product.ListPrice.ToString("c")</span>
                                }
                            </div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn-add-cart">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-sm-6" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h4>Free Shipping</h4>
                    <p>On orders over $50</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Secure Payment</h4>
                    <p>100% protected</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h4>Easy Returns</h4>
                    <p>30-day return policy</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up" data-aos-delay="400">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h4>24/7 Support</h4>
                    <p>Dedicated support team</p>
                </div>
            </div>
        </div>
    </div>
</section>

