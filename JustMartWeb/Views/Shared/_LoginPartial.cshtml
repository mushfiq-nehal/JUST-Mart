@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0;">
            <div class="user-avatar-wrapper">
                <div class="user-avatar">
                    @{
                        var userName = UserManager.GetUserName(User);
                        var initials = userName?.Length > 0 ? userName.Substring(0, Math.Min(2, userName.Length)).ToUpper() : "U";
                    }
                    <span class="user-initials">@initials</span>
                </div>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" style="border-radius: 12px; min-width: 200px;">
            <li class="px-3 py-2 border-bottom">
                <small class="text-muted d-block">Signed in as</small>
                <strong class="text-dark d-block text-truncate" style="max-width: 180px;">@userName</strong>
            </li>
            <li>
                <a class="dropdown-item py-2 px-3 dropdown-item-modern" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person-circle me-2" style="color: #667eea;"></i>My Account
                </a>
            </li>
            <li><hr class="dropdown-divider my-1"></li>
            <li>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="dropdown-item py-2 px-3 dropdown-item-modern w-100 text-start border-0 bg-transparent">
                        <i class="bi bi-box-arrow-right me-2" style="color: #ef4444;"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link px-3 py-2 fw-semibold nav-link-modern" id="register" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus me-1"></i>Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link px-3 py-2 fw-semibold nav-link-modern" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </li>
}
</ul>
