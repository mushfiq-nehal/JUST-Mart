<div class="container my-5">
    <div class="mb-4">
        <h1 class="display-6 fw-bold mb-2" style="color: #ff6b6b;">
            <i class="bi bi-people me-3"></i>User Management
        </h1>
        <p class="text-muted mb-0">Manage user accounts and permissions</p>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 16px;">
        <div class="card-body p-4">
            <table id="tblData" class="table table-hover align-middle" style="width:100%">
                <thead style="background: rgba(255, 107, 107, 0.05);">
                    <tr>
                        <th class="fw-semibold">Name</th>
                        <th class="fw-semibold">Email</th>
                        <th class="fw-semibold">Phone</th>
                        <th class="fw-semibold">Company</th>
                        <th class="fw-semibold">Role</th>
                        <th class="fw-semibold text-center">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<style>
    #tblData thead th {
        border: none;
        color: #6b7280;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    #tblData tbody tr {
        border-bottom: 1px solid #f3f4f6;
    }
    #tblData tbody tr:hover {
        background: rgba(255, 107, 107, 0.02);
    }
</style>

@section Scripts{
    <script src="~/js/user.js"></script>
}
