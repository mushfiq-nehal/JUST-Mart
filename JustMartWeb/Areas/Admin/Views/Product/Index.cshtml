@model List<Product>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-2" style="color: #ff6b6b;">
                <i class="bi bi-box me-3"></i>Product Management
            </h1>
            <p class="text-muted mb-0">Manage your product inventory</p>
        </div>
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-lg text-white" style="background: linear-gradient(135deg, rgba(255, 107, 107, 0.9) 0%, rgba(250, 82, 82, 0.85) 100%); border: none; border-radius: 12px; box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);">
            <i class="bi bi-plus-circle me-2"></i>Create New Product
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 16px;">
        <div class="card-body p-4">
            <table id="tblData" class="table table-hover align-middle" style="width:100%">
                <thead style="background: rgba(255, 107, 107, 0.05);">
                    <tr>
                        <th class="fw-semibold">Title</th>
                        <th class="fw-semibold">SKU</th>
                        <th class="fw-semibold">Price</th>
                        <th class="fw-semibold">Author</th>
                        <th class="fw-semibold">Category</th>
                        <th class="fw-semibold text-center">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<style>
    #tblData thead th {
        border: none;
        color: #6b7280;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    #tblData tbody tr {
        border-bottom: 1px solid #f3f4f6;
    }
    #tblData tbody tr:hover {
        background: rgba(255, 107, 107, 0.02);
    }
</style>

@section Scripts{
    <script src="~/js/product.js"></script>
}
